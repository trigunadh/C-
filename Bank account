#include <iostream>
using namespace std;

class bankaccount
{
private:
    int balance;

public:
    bankaccount() {
        balance = 1234;
    }

    void checkbalance() {
        cout << "Your balance is: " << balance << endl;
    }

    friend class bankmanager;
};

class bankmanager
  {
   public:
    int credit;
    int debit;
       char ch;

    void change(bankaccount &object)   // giving an object to access the balance in the friend class its just used for balance 
    {
        cout << "Enter + to credit amount and - to withdraw amount: ";
        cin >> ch;

           if (ch == '+')
             {
                cout << "Enter the amount to be added: ";
                     cin >> credit;
                  object.balance += credit;   // access the balance without the object balance cant be accessed
             }
        else
           {
            cout << "Enter the amount to be withdrawn: ";
            cin >> debit;
            object.balance -= debit;
           }
    }
};

int main()
{
    bankaccount user;
    bankmanager manager;

    user.checkbalance();
    manager.change(user);
    user.checkbalance();    

    return 0;
}
