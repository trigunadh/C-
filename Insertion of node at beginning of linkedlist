// Node structure
struct Node {
    int data;
    Node* next;
};


// Linked List class
class LinkedList {
private:
    Node* head; // Pointer to the head of the list

public:
    // Constructor
    LinkedList() {
        head = nullptr;
    }
    // Insert at the beginning
    void insertAtBeginning(int value) {
        Node* newNode = new Node();
        newNode->data = value;
        newNode->next = head;
        head = newNode;
    }
    
        void display() {
        if (head == nullptr) {
            cout << "List is empty.\n";
            return;
        }

        Node* temp = head;
        while (temp != nullptr) {
            cout << temp->data << " -> ";
            temp = temp->next;
        }
        cout << "NULL\n";
    }

    
    
};


int main() {
    LinkedList list;

    list.insertAtBeginning(10);
    list.display();

    return 0;
}
