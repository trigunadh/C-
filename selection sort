#include <iostream>
using namespace std;
void swapelements(int &a, int &b) {
    int temp = a;
    a = b;
    b = temp;
}

void selectionsort(int a[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int min = i;
        // Corrected: j < n to include the last element
        for (int j = i + 1; j < n; j++) {
            if (a[min] > a[j]) {
                min = j; 
            }
        }
  
        swapelements(a[min], a[i]);
    }
}

int main() {
    int a[100], n;
    cout << "Enter the number of elements: ";
    cin >> n;
    cout << "Enter the elements of array: ";
    for (int i = 0; i < n; i++) cin >> a[i];

    selectionsort(a, n);

    cout << "The sorted list of elements is: " << endl;
    for (int i = 0; i < n; i++) cout << a[i] << " ";
    return 0;
}
